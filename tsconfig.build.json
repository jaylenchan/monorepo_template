{
    "compilerOptions": {
        "strict": true,
        "useUnknownInCatchVariables": true,
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "newLine": "lf",
        "noEmitOnError": true,
        "declaration": true,
        "noEmit": false,
        "baseUrl": ".",
        "paths": {
            "@jeditor/*": [
                "packages/*/src"
            ]
        }
    },
    "exclude": [
        "**/node_modules",
        "**/.*/",
        "dist"
    ]
}